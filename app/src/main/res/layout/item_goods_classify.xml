<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_menu_item"
    android:layout_width="match_parent"
    android:background="@drawable/selector_shop_left_classify_selected"
    android:clickable="true"
    android:layout_height="wrap_content">
    <TextView
        android:text="超值特惠"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:id="@+id/item_goods_classify_tv_classify_name"
        android:ellipsize="end"
        android:maxEms="6"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
        android:background="@color/app_white"
        android:layout_below="@id/item_goods_classify_tv_classify_name"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>
