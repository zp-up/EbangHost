<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_of_activity_change_classify_ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/item_classify_ll_parent"
        android:background="@drawable/advice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
     <com.sctjsj.ebanghost.util.SmoothCheckBox
         android:id="@+id/item_of_activity_classify_mag_cb_selected"
         android:layout_gravity="center"
         android:layout_marginLeft="10dp"
         android:layout_width="25dp"
         android:layout_height="25dp" />
    <TextView
        android:id="@+id/item_of_activity_classify_mag_tv_name"
        android:text="热销"
        android:textSize="18sp"
        android:textColor="@color/app_white"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
</LinearLayout>

</LinearLayout>