<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_gray"
    android:id="@+id/activity_reset_pwd_ll_parent"
    tools:context="com.sctjsj.ebanghost.activity.ResetPwdActivity">
    <!--标题栏-->
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/app_green"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <!--back-->
        <LinearLayout

            android:id="@+id/activity_reset_pwd_ll_back"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_back"
                android:layout_width="35dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <!--title-->
        <LinearLayout
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/app_white"
                android:gravity="center"
                android:text="找回密码"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--regist-->
        <RelativeLayout
            android:onClick="loginActivityClick"
            android:id="@+id/login_activity_rl_regist"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/app_white"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="@color/app_white"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_1_ok"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:background="@color/app_green"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_2_ok"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:background="@color/app_white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="手机验证"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="设置新密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_reset_pwd_tv_remind"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="提示："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:background="@drawable/input_border"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/activity_reset_pwd_et_new_pwd"
            android:hint="新密码"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/input_border"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/activity_reset_pwd_et_confirm_new_pwd"
            android:hint="确认新密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:clickable="false"
            android:onClick="ResetPwdClick"
            android:textSize="16sp"
            android:textColor="@color/app_white"
            android:text="提交"
            android:background="@color/app_green"
            android:id="@+id/reset_pwd_activity_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>

