<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_login_ll_parent"
    android:layout_width="match_parent"
    android:background="@color/app_green"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/img_business_login"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <!--account-->
    <LinearLayout
        android:background="@drawable/login"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <!--icon-->
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:src="@mipmap/icon_user_blue"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>

        <!--edittext-->
       <RelativeLayout
           android:layout_marginLeft="5dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <EditText
               android:id="@+id/activity_login_et_account"
               android:textSize="14sp"
               android:hint="请输入商户账户"
               android:singleLine="true"
               android:background="@null"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </RelativeLayout>

    </LinearLayout>

    <!--pwd-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/login"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <!--icon-->
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:src="@mipmap/icon_pwd_blue"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView2" />
        </RelativeLayout>

        <!--edittext-->
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/activity_login_et_pwd"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:hint="请输入登录密码"
                android:singleLine="true"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>




    <Button
        android:id="@+id/activity_login_btn_submit"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@color/app_green"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_login_tv_forget_pwd"
            android:textSize="16sp"
            android:textColor="@color/app_white"
            android:text="忘记密码？"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>